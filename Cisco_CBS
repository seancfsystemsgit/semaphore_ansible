- name: Pull Cisco SMB configuration
  hosts: all
  gather_facts: no

  tasks:
    - name: Get full running configuration (disable paging)
      community.ciscosmb.command:
        commands:
          - terminal datadump
          - show running-config
      register: config_output

    - name: Save config to local file
      copy:
        content: "{{ config_output.stdout[1] }}"
        dest: "backups/{{ inventory_hostname }}-running-config.txt"

    - name: Print running config to screen
      debug:
        var: config_output.stdout[1]
